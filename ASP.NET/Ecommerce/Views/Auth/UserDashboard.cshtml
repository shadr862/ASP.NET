@using Ecommerce.Models

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="text-center bg-primary text-white py-3 mb-4 rounded shadow">
        <h3 class="mb-0 fw-bold fs-3" style="letter-spacing: 1px;">User List</h3>
    </div>


    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered align-middle shadow rounded">
            <thead class="table-dark text-center">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Role</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @{
                    List<User> users = ViewBag.Users;
                }
                @foreach (var obj in users)
                {
                    <tr>
                        <td>@obj.FirstName</td>
                        <td>@obj.LastName</td>
                        <td>@obj.Email</td>
                        <td>@obj.Gender</td>
                        <td>@obj.Role</td>
                        <td>@obj.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

