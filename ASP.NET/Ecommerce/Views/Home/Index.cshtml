<script>
    //when domContent loaded will call,then execute api
    $(document).ready(function(){
        //we use callback fuction for not moving next line execution
        $.get('https://dummyjson.com/products/1',function(response){
           
            // $.each(reponse.images,function(index,obj))
            // {
            //     if(index==0)
            //     {
            //         $('#imgProduct').attr('src',obj)
            //     }
            // }
            $('#imgProduct').attr('src',response.images[0])
            $('#pdTitle').html(response.title)
            $('#pdDesc').html(response.description)
            $('#pdPrice').html(response.price)

        })
    })
</script>

