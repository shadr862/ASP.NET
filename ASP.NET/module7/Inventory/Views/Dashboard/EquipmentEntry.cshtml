@*dynamic part*@
<div id="dvModal" style="display: none">
    <form method="post" action="@Url.Action("Index","Dashboard")">
        <div class="card" ">
            <div class="card-body">
                <input type="hidden" id="choice" name="choice" value="0" />
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label" style="color:#ffffff" ">EquipmentID</label>
                    <input type="text" name="EquipmentID" class="form-control" id="EquipmentID" placeholder="EquipmentID">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput2" class="form-label" style="color:#ffffff" ">Name</label>
                    <input type="text" name="txtName" class="form-control" id="exampleFormControlInput1" placeholder="Name">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput3" class="form-label" style="color:#ffffff" ">Quantity</label>
                    <input type="text" name="txtQuantity" class="form-control" id="exampleFormControlInput1" placeholder="Quantity">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput4" class="form-label" style="color:#ffffff" ">Entry Date</label>
                    <input type="date" name="txtEntryDate" class="form-control" id="exampleFormControlInput1" placeholder="EntryDate">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput5" class="form-label" style="color:#ffffff" ">End Date</label>
                    <input type="date" name="txtEndDate" class="form-control" id="exampleFormControlInput1" placeholder="EndDate">
                </div>
                <input type="submit" id="btnSubmit" class="btn btn-primary" name="btnSubmit" value="Save" />
            </div>
        </div>
    </form>
</div>

